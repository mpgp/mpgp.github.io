{
  "version": "1.0.0",
  "name": "spec",
  "description": "MPGP Documentation",
  "author": "loktionov129",
  "license": "BSD-2-Clause",
  "homepage": "https://github.com/mpgp/mpgp.github.io#readme",
  "keywords": [
    "documentation",
    "rest-api-documentation",
    "websocket-documentation"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mpgp/mpgp.github.io.git"
  },
  "bugs": {
    "url": "https://github.com/mpgp/mpgp.github.io/issues"
  },
  "commitlint": {
    "extends": [
      "./node_modules/@commitlint/config-conventional"
    ],
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "core",
          "shared",
          "docs",
          "spec"
        ]
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.ts": [
      "ng lint spec",
      "ng lint spec-e2e",
      "git add"
    ]
  },
  "release": {
    "npmPublish": false,
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/git"
    ],
    "success": [
      "@semantic-release/github"
    ],
    "fail": [
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "build": "npm run clean && ng build --prod",
    "clean": "rm -rf ./dist",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "lint": "ng lint",
    "ng": "ng",
    "precommit": "lint-staged",
    "start": "ng serve",
    "static": "static ./dist",
    "test": "echo Please use yarn run test:unit",
    "test:unit": "CHROME_BIN=chromium ng test",
    "test:e2e": "CHROME_BIN=chromium ng e2e",
    "ci:test": "CHROME_BIN=chromium-browser DISPLAY=:99.0 ng test --watch=false --code-coverage",
    "ci:e2e": "CHROME_BIN=chromium-browser DISPLAY=:99.0 ng e2e"
  },
  "dependencies": {
    "@angular/animations": "6.0.4",
    "@angular/cdk": "6.2.1",
    "@angular/common": "6.0.4",
    "@angular/compiler": "6.0.4",
    "@angular/core": "6.0.4",
    "@angular/forms": "6.0.4",
    "@angular/http": "6.0.4",
    "@angular/material": "6.2.1",
    "@angular/platform-browser": "6.0.4",
    "@angular/platform-browser-dynamic": "6.0.4",
    "@angular/router": "6.0.4",
    "core-js": "2.5.7",
    "rxjs": "6.2.0",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.6.8",
    "@angular/cli": "6.0.8",
    "@angular/compiler-cli": "6.0.4",
    "@angular/language-service": "6.0.4",
    "@commitlint/cli": "7.0.0",
    "@commitlint/config-conventional": "7.0.1",
    "@commitlint/config-lerna-scopes": "7.0.0",
    "@semantic-release/changelog": "2.0.2",
    "@semantic-release/git": "5.0.0",
    "@semantic-release/github": "4.2.17",
    "@types/jasmine": "2.8.8",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "10.1.4",
    "codelyzer": "4.3.0",
    "coveralls": "3.0.1",
    "husky": "0.14.3",
    "jasmine-core": "3.1.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "2.0.2",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "2.0.1",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "1.1.0",
    "lint-staged": "7.2.0",
    "protractor": "5.3.2",
    "ts-node": "6.1.0",
    "tslint": "5.10.0",
    "typescript": "2.7.2"
  }
}
